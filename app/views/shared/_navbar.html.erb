<nav class="navbar">
  <div class="navbar-container">
    <div class="navbar-logo">
     <%= link_to root_path do %>
        <span class="logo-text">YUG0</span>
      <% end %>
    </div>

    <div class="navbar-menu">
      <%= link_to "Get inspired", get_inspired_path, class: "navbar-link" %>

      <% if user_signed_in? %>
        <%= link_to "My trips", trips_path, class: "navbar-link" %>

        <div class="navbar-avatar-dropdown" data-controller="dropdown" data-action="click@window->dropdown#hide">
          <%= link_to "#", class: "navbar-avatar", title: current_user.first_name.presence || current_user.email, data: { action: "click->dropdown#toggle" } do %>
            <% if current_user.avatar.attached? %>
              <%= image_tag current_user.avatar, alt: current_user.first_name.presence || current_user.email %>
            <% else %>
              <span>error 404</span>
            <% end %>
          <% end %>

          <div class="dropdown-menu" data-dropdown-target="menu">
            <%= button_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item dropdown-logout" %>
          </div>
        </div>

      <% else %>
        <%= link_to "Sign in", new_user_session_path, class: "navbar-link" %>
        <%= link_to "Sign up", new_user_registration_path, class: "navbar-link navbar-link-signup" %>
      <% end %>
    </div>
  </div>
</nav>
