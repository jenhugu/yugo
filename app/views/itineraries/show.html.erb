          <div class="itinerary-card__avatar">
            <%= image_tag "https://i.pravatar.cc/150?img=6", alt: "Participant" %>
          </div>
        </div>
      </div>
      <%#mettre les lignes suivantes dans le render itinerary_card %>
      <div>
        <div class="itinerary-card__section-day">
        <%# remplacer par itinerary_item day n° %>
          <h3>Day n°</h3>
        <%# remplacer par itinerary_item date %>
         <div class="itinerary-card__tag-date">Date</div>
        </div>
        <%# iteration sur les activités %>
        <div class="itinerary-card__day-time">Time of the activity</div>
        <div>

        </div>
      </div>
      <%# fin du render  %>
    </div>
  </div>

</div>
