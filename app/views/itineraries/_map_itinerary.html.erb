<%# Map Modal for Itinerary %>
<div class="map-modal" data-map-target="modal" data-action="click->map#closeOnOverlay">
  <div class="map-modal__content map-modal__content--with-sidebar">
    <div class="map-modal__header">
      <h2 class="map-modal__title">Itinerary Map</h2>
      <button type="button" class="map-modal__close" data-action="click->map#close">
        <i class="fa-solid fa-xmark"></i>
      </button>
    </div>
    <div class="map-modal__body map-modal__body--with-sidebar">
      <%# Sidebar with days %>
      <div class="map-sidebar" data-map-target="sidebar">
        <%# Hotel address input %>
        <div class="map-sidebar__hotel">
          <div class="map-sidebar__hotel-header">
            <i class="fa-solid fa-hotel"></i>
            <span>My Hotel</span>
          </div>
          <div class="map-sidebar__hotel-input">
            <input type="text"
                   placeholder="Enter your hotel address..."
                   data-map-target="hotelInput"
                   data-action="keydown.enter->map#addHotelMarker" />
            <button type="button" data-action="click->map#addHotelMarker" class="map-sidebar__hotel-btn">
              <i class="fa-solid fa-location-dot"></i>
            </button>
          </div>
          <div class="map-sidebar__hotel-status" data-map-target="hotelStatus"></div>
        </div>
        <div class="map-sidebar__header">
          <h3 class="map-sidebar__title">Days</h3>
        </div>
        <div class="map-sidebar__days" data-map-target="daysList">
          <%# Days will be populated by JavaScript %>
        </div>
      </div>
      <%# Map container %>
      <div class="map-main">
        <div id="map-container" class="map-container" data-map-target="container"></div>
      </div>
    </div>
  </div>
</div>
