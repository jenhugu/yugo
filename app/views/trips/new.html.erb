<div class="trips-form">
  <div class="trips-form__container">
    <h1 class="trips-form__title">Create a trip</h1>

    <%= form_with model: @trip, url: trips_path, class: "trips-form__form" do |f| %>

      <div class="trips-form__field">
        <%= f.label :name, "Trip name" %>
        <%= f.text_field :name, placeholder: "Summer trip in Paris" %>
      </div>

      <div class="trips-form__field">
        <%= f.label :destination, "Destination" %>
        <%= f.text_field :destination, placeholder: "Paris" %>
      </div>

      <div class="trips-form__field">
        <%= f.label :start_date, "Start date" %>
        <%= f.date_field :start_date %>
      </div>

      <div class="trips-form__field">
        <%= f.label :end_date, "End date" %>
        <%= f.date_field :end_date %>
      </div>

      <p class="trips-form__question">Are you planning this trip alone or with a group?</p>

      <div class="trips-form__buttons">
        <button type="button" class="trips-form__button trips-form__button--secondary">
          I'm traveling alone
        </button>
        <%= f.submit "With a group", class: "trips-form__button trips-form__button--primary" %>
      </div>

    <% end %>

    <%= render 'shared/progress_bar', current_step: 1 %>

    <div class="trips-form__tip">
      <p class="trips-form__tip-title">Tip #1</p>
      <p class="trips-form__tip-text">Choose the right place and time  it can make or break your trip.</p>
    </div>
  </div>
</div>
